<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Saint Jean Douai!{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-pzjwHz/j7joQmdXOgST3pYByn2bwmcrOPX9VhwWogWq5E7fx/zxQZflbbd+7cE7t" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
       
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <style>
                .nav-link.btn-primary {
                    background-color: #800080;
                    border-color: #800080;
                    color: #fff;
                    font-weight: bold;
                    transition: background-color 0.3s ease, border-color 0.3s ease;
                }
                .nav-link.btn-primary:hover, .nav-link.btn-primary:focus {
                    background-color: #6a006a;
                    border-color: #6a006a;
                }
            </style>
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #800080;">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <img src="{{ asset('Image/Logo.png') }}" alt="Logo" width="30" height="30" class="d-inline-block align-text-top">
                    Saint Jean Douai
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary" href="ajout_user">Ajout d'élève</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container mt-4">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
